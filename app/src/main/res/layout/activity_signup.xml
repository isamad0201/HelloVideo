<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools ="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
tools:context=".MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create User"
    android:textSize="100px"
    android:textColor="#d3d8e3"
    android:layout_alignParentTop = "true"
    android:layout_centerHorizontal = "true"
    android:layout_marginTop="450px" />



<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="name"
    android:textCursorDrawable="@null"
    android:textColorHint="#8e9094"
    android:drawablePadding="5dp"
    android:inputType="text"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="320dp"
    android:id="@+id/signupName"
    android:gravity="start" />


<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="email"
    android:textCursorDrawable="@null"
    android:textColorHint="#8e9094"
    android:drawablePadding="5dp"
    android:inputType="textEmailAddress"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="390dp"
    android:id="@+id/signupEmail"
    android:gravity="start" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="passward"
    android:textCursorDrawable="@null"
    android:textColorHint="#8e9094"
    android:drawablePadding="5dp"
    android:inputType="textPassword"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="460dp"
    android:id="@+id/signupPassward"
    android:gravity="start" />


<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="SIGN UP"
    android:id="@+id/signupButton"
    android:textAllCaps="false"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="550dp"
    android:textColor="#8e9094"
    android:textSize="20dp"
    android:onClick="create"
    android:gravity="center"
    tools:ignore="OnClick" />

<TextView
    android:id="@+id/alreadyAUserText"
    android:layout_width="wrap_content"
    android:layout_height="23dp"
    android:layout_marginTop="620dp"
    android:layout_marginLeft="125dp"
    android:fontFamily="sans-serif"
    android:text="Already a user"
    android:textColor="#d3d8e3"
    android:layout_centerHorizontal="true"
    android:textSize="12dp"
    android:focusable="true" />

<TextView
    android:id="@+id/redirectLogin"
    android:layout_width="wrap_content"
    android:layout_height="23dp"
    android:layout_marginTop="620dp"
    android:fontFamily="sans-serif-medium"
    android:gravity="center"
    android:clickable="true"
    android:text="Login"
    android:layout_toEndOf="@+id/alreadyAUserText"
    android:textColor="#00d9d9"
    android:textSize="12dp"
    android:onClick="user"
    android:focusable="true"
    tools:ignore="OnClick" />



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Profile"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/logout_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                tools:ignore="MissingConstraints"
                />

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/profileImageChange"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/arrow_bg"
                app:layout_constraintCircle="@+id/profilePicture"
                app:layout_constraintCircleAngle="135"
                app:layout_constraintCircleRadius="80dp"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/profileImageChangeCameraIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_camera_alt_24"
                app:layout_constraintCircle="@+id/profilePicture"
                app:layout_constraintCircleAngle="135"
                app:layout_constraintCircleRadius="80dp"
                tools:ignore="MissingConstraints"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileProgress"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:textColor="#9e9d9d"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/deltaRelative"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:id="@+id/profileName"
        android:text="@string/fetching"
        android:textColor="#333232"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/profileName"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17.3dp"/>

    <View android:background="#9e9e9e"
        android:id="@+id/dash1"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="17.3dp"
        app:layout_constraintTop_toBottomOf="@id/profileName"/>




    <TextView
        android:id="@+id/textView2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:textColor="#9e9d9d"
        android:text="User ID"
        app:layout_constraintTop_toBottomOf="@+id/deltaRelative"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:id="@+id/profileUId"
        android:text="@string/fetching"
        android:textColor="#333232"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17.3dp"/>

    <View android:background="#9e9e9e"
        android:id="@+id/dash2"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="17.3dp"
        app:layout_constraintTop_toBottomOf="@id/profileUId"/>





    <TextView
        android:id="@+id/textViewProfileEmail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:textColor="#9e9d9d"
        android:text="E-mail"
        app:layout_constraintTop_toBottomOf="@+id/dash2"
        tools:ignore="MissingConstraints" />
    <TextView
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:id="@+id/profileEmail"
        android:text="@string/fetching"
        android:textColor="#333232"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <View android:background="#9e9e9e"
        android:id="@+id/dash3"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="17.3dp"
        app:layout_constraintTop_toBottomOf="@id/profileEmail"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</LinearLayout>

